#!/bin/bash

ENTRY_POINT="/tmp/dock_pycharm_entry_point.sh"

cat > ${ENTRY_POINT} << EOF
#!/bin/bash
groupadd -g $(getent group $USER | cut -d: -f3) $USER
useradd -g $USER -G sudo -N -u $UID $USER
chown $USER:$USER /home/$USER
/bin/su $USER -c "/etc/pycharm/bin/pycharm.sh"

EOF

chmod +x ${ENTRY_POINT}
VOLUMES="-v ${ENTRY_POINT}:${ENTRY_POINT}:ro -v $PWD:$PWD"
VOLUMES="${VOLUMES} -v /tmp/.X11-unix:/tmp/.X11-unix -v /dev/shm:/dev/shm"
VOLUMES="${VOLUMES} -v $HOME/dock/pych:/home/$USER"

docker run --rm --entrypoint=${ENTRY_POINT} ${VOLUMES} -e DISPLAY=$DISPLAY approximator/pycharm
rm ${ENTRY_POINT}
# xhost local:root
