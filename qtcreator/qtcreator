#!/bin/bash

if [ $# = 1 ]; then
   QT_CREATOR_VERSION=$1
fi

: ${QT_CREATOR_VERSION:="latest"}

ENTRY_POINT="/tmp/dock_qtcreator_entry_point.sh"

cat > ${ENTRY_POINT} << EOF
#!/bin/bash
groupadd -g $(getent group $USER | cut -d: -f3) $USER
useradd -g $USER -G sudo -N -u $UID $USER
chown $USER:$USER /home/$USER
/bin/su $USER -c "qmake --version && qbs --version && /usr/bin/qtcreator"

EOF

chmod +x ${ENTRY_POINT}
VOLUMES="-v $HOME/dock/qtcreator:/home/$USER"
VOLUMES="${VOLUMES} -v ${ENTRY_POINT}:${ENTRY_POINT}:ro -v $PWD:$PWD"
VOLUMES="${VOLUMES} -v /tmp/.X11-unix:/tmp/.X11-unix -v /dev/shm:/dev/shm"

docker run -d --entrypoint=${ENTRY_POINT} ${VOLUMES} -e DISPLAY=$DISPLAY approximator/qtcreator:$QT_CREATOR_VERSION
# rm ${ENTRY_POINT}
# xhost local:root
# docker exec -it goofy_turing /bin/bash
